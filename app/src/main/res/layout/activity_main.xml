<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7FA"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="8dp">

            <LinearLayout
                android:id="@+id/card_kate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_kate"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kate_img"
                    android:contentDescription="@string/content_description_photo" />

                <TextView
                    android:id="@+id/name_kate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kate_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kate_info"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/desc_kate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kate_description" android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_kate_gthb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_know_more"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_ydrick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_ydrick"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ydrick"
                    android:contentDescription="@string/content_description_photo" />

                <TextView
                    android:id="@+id/name_ydrick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ydrick_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ydrick_info"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/desc_ydrick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ydrick_description" android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_ydrick_gthb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_know_more"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_sai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_sai"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sai"
                    android:contentDescription="@string/content_description_photo" />

                <TextView
                    android:id="@+id/name_sai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sai_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/sai_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sai_info"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/desc_sai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sai_description" android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_3_gthb_sai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_know_more"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_ethan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_ethan"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ethan"
                    android:contentDescription="@string/content_description_photo" />

                <TextView
                    android:id="@+id/name_ethan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ethan_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/ethan_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ethan_info"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/desc_ethan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ethan_description" android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_4_gthb_ethan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_know_more"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_sandy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_sandy"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile"
                    android:contentDescription="@string/content_description_photo" />

                <TextView
                    android:id="@+id/name_5_sandy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sandy_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/sandy_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandy_info"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:id="@+id/desc_sandy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sandy_description" android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_5_gthb_sandy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_know_more"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>